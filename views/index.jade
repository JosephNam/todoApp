extends layout

block content
	.container.ng-cloak
		.header
			h1 Todo's
			hr
			h1.lead Node + Express + Angular + Postgres
		.todo-form
			.form
				.form-group
					input.form-control.input-lg(type="text", placeholder="Add a todo...", ng-model="formData.text")
				button.btn.btn-primary.btn-lg(type="submit", ng-click="createTodo(todo.id)") Submit Task
		br
		.todo-list
			ul.ng-cloak(ng-repeat="todo in todoData")
				h3
					input.lead(id="check" type='checkbox', ng-click='deleteTodo(todo.id)')
					| &nbsp;{{ todo.text }}
				hr
